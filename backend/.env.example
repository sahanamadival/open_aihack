# Environment Configuration for GenAI Accessibility Education Portal

# Application Settings
ENVIRONMENT=development
PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/accessibility_edu
REDIS_URL=redis://localhost:6379
DATABASE_NAME=accessibility_education_portal

# Security & Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12

# AI & ML Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Text-to-Speech Services
GOOGLE_CLOUD_KEY_PATH=path/to/your/google-cloud-service-account.json
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@accessibility-edu.org

# SMS/Phone Verification
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,epub

# Cloud Storage (Optional)
AWS_S3_BUCKET=accessibility-edu-files
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioaccess
MINIO_SECRET_KEY=miniosecret

# OCR Services
TESSERACT_PATH=/usr/bin/tesseract
EASYOCR_GPU=false

# Content Filtering & Moderation
PERSPECTIVE_API_KEY=your-perspective-api-key

# Analytics & Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_TRACKING_ID=your-google-analytics-id

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VOICE_INPUT=true
ENABLE_GAMES=true
ENABLE_ANALYTICS=true
ENABLE_OFFLINE_MODE=false

# Accessibility Features
DEFAULT_FONT_FAMILY=Arial
OPENDYSLEXIC_FONT_URL=https://fonts.googleapis.com/css2?family=OpenDyslexic
DYSLEXIA_FRIENDLY_COLORS=true

# Content Limits
MAX_TEXTBOOK_SIZE=100MB
MAX_AUDIO_LENGTH_MINUTES=180
MAX_SUMMARY_LENGTH=1000
MAX_QUIZ_QUESTIONS=50

# API Versions
API_VERSION=v1
MINIMUM_CLIENT_VERSION=1.0.0

# Development Settings (only for development environment)
RELOAD_ON_CHANGE=true
LOG_LEVEL=DEBUG
SHOW_DOCS=true
ENABLE_PROFILER=true

# Production Settings (only for production environment)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# SHOW_DOCS=false
# ENABLE_PROFILER=false
# SSL_REQUIRED=true
# SECURE_COOKIES=true
